<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:simpleType name="T_nome">
		<xs:restriction base="xs:string">
			<xs:pattern value="[A-Z|ÁÀÃÂÉÈÍÌÒÓÕÔÙÚ][a-z|áàãâéèíìóòõôúùç]{1,30}((\s(d'|((da|de|do|dos|e)\s))?)[A-Z|ÁÀÃÂÉÈÍÌÒÓÕÔÙÚ][a-z|áàãâéèíìóòõôúùç]{1,30})?"/>
		</xs:restriction>
	</xs:simpleType>
	<xs:complexType name="T_terceto">
		<xs:sequence>
			<xs:element ref="verso" minOccurs="3" maxOccurs="3"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="T_quadra">
		<xs:sequence>
			<xs:element ref="verso" minOccurs="4" maxOccurs="4"/>
		</xs:sequence>
	</xs:complexType>
	<xs:complexType name="T_poema">
		<xs:sequence>
